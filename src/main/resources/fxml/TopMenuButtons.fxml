<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="book.keeper.controllers.TopMenuButtonsController">
    <children>
        <ToggleButton mnemonicParsing="false" onAction="#openBookList" prefHeight="50.0" prefWidth="150.0"
                      text="%list.books">
            <graphic>
                <ImageView fitHeight="150.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/library.png"/>
                    </image>
                </ImageView>
            </graphic>
            <toggleGroup>
                <ToggleGroup fx:id="menu"/>
            </toggleGroup>
        </ToggleButton>
        <Button mnemonicParsing="false" onAction="#addBook" prefHeight="50.0" prefWidth="150.0" text="%add.book">
            <graphic>
                <ImageView fitHeight="27.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/add.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#addAuthor" prefHeight="50.0" prefWidth="150.0" text="%add.author">
            <graphic>
                <ImageView fitHeight="27.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/author.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#addCategory" prefHeight="50.0" prefWidth="150.0"
                text="%add.category">
            <graphic>
                <ImageView fitHeight="27.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/category.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</HBox>
