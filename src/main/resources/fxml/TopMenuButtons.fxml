<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>


<HBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="book.keeper.controllers.TopMenuButtonsController">
    <children>
        <ToggleButton mnemonicParsing="false" onAction="#openLibrary" prefHeight="50.0" prefWidth="100.0"
                      text="Library">
            <toggleGroup>
                <ToggleGroup fx:id="menu"/>
            </toggleGroup>
        </ToggleButton>
        <ToggleButton mnemonicParsing="false" onAction="#openBookList" prefHeight="50.0" prefWidth="100.0" text="Books"
                      toggleGroup="$menu"/>
        <ToggleButton mnemonicParsing="false" onAction="#openStatistics" prefHeight="50.0" prefWidth="100.0"
                      text="Statistics" toggleGroup="$menu"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</HBox>
